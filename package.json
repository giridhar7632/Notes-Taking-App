{
  "name": "notes-taking-app",
  "version": "1.0.0",
  "description": "a simple MERN stack notes takin app with basic auth and CRUD functionality",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "server": "nodemon index.js",
    "client": "cd front-end && npm start",
    "client-install": "cd front-end && npm install",
    "server-install": "npm install",
    "install": "concurrently \"npm run client-install\" \"npm run server-install\" ",
    "dev": "concurrently \"npm run client\" \"npm run server\" ",
    "heroku-postbuild": "cd clinet && npm install && npm run build"
  },
  "keywords": [
    "node.js",
    "mongodb",
    "express",
    "MERN-stack",
    "full-stack"
  ],
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "concurrently": "^6.2.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.12"
  },
  "devDependencies": {
    "nodemon": "^2.0.7"
  },
  "nodemonConfig": {
    "ignore": [
      "./client/*",
      "/package.json"
    ]
  }
}
